<!doctype html>
<html>

<head>
  <title>MVC com Express</title>
</head>

<body>
  <nav>
    <h3>Cookmaster</h3>
    <h4><%= user.name %></h4>
    <a href="/logout">Logout</a>
  </nav>
  <% if (message) { %>
  <p>
    <%= message %>
  </p>
  <% } %>
  <form action=<%= `/me/edit` %> method="POST">
    <label for="email">Email</label>
    <input id="email" name="email" type="email" value="<%= user.email %>" />
    <div>
      <label for="password">Nova Senha</label>
      <input id="password" name="password" type="password" />
    </div>
    <div>
      <label for="confirm_password">Confirmar Senha</label>
      <input id="confirm_password" name="confirm_password" type="password" />
    </div>
    <div>
      <label for="first_name">Nome</label>
      <input id="first_name" name="first_name" type="text" value="<%= user.name %>" />
    </div>
    <div>
      <label for="last_name">Sobrenome</label>
      <input id="last_name" name="last_name" type="text" value="<%= user.lastName %>" />
    </div>
    <a href="/admin">Cancelar</a>
    <button type="submit">Salvar</button>
  </form>
</body>

</html>