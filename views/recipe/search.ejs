<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Search</title>
  </head>
  <body>
    <h1>Buscar Receitas</h1>
    <form action="/recipes/search" method="GET">
      <input type="text" name="q" />
      <button type="submit">Pesquisar</button>
    </form>
    <ul>
      <% recipes.forEach(({ id, title, authorName }) => { %>
        <div>
          <p><%= title %></p>
          <p><%= authorName %></p>
          <a
            href=<%= `/recipes/${id}` %>
          >
            Ver mais
          </a>
        </div><br />
      <% }) %>
    </ul>
  </body>
</html>