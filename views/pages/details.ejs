<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/index.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <title>Cookmaster - Details</title>
  </head>

  <body id="body">
    <section class="box flex-column flex-font">
      <%- include("../components/header", {endpoint: endpoint, name: name}); %>
      <section class="box box90 flex-column flex-font">
        <h1><%= recipe.recipeName %></h1>
        <p>Enviada por <%= recipe.userName %></p>
        <% if (isUser) {%>
        <button
          class="box btn btn-danger"
          onclick="window.location.pathname='<%= `/recipes/${recipe.recipeId}/edit` %>'"
        >
          Editar Receita
        </button>
        <button
          class="box btn btn-danger"
          onclick="window.location.pathname='<%= `/recipes/${recipe.recipeId}/delete` %>'"
        >
          Excluir Receita
        </button>
        <% } %>
        <h2>Ingredientes</h2>
        <ul>
          <% recipe.ingredients.split(",").forEach((ingredient) => { if (ingredient !== '') { %>
          <li><%= ingredient %></li>
          <% }}) %>
        </ul>
        <h2>Modo de Preparo</h2>
        <p><%= recipe.instructions %></p>
      </section>
      <button class="box btn btn-danger" onclick="window.location.pathname='/'">
        Home
      </button>
    </section>
  </body>
</html>
