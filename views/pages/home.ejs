<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="index.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <title>Cookmaster - Home</title>
  </head>

  <body id="body">
    <section class="box flex-column flex-font">
      <%- include("../components/header", {endpoint: endpoint, name: name}); %>
      <section class="box box60 flex-row">
        <% if (name) {%>
        <button class="box btn btn-danger" onclick="window.location.pathname='/me/recipes'">
          Minhas Receitas
        </button>
        <button class="box btn btn-danger" onclick="window.location.pathname='/recipes/new'">
          Nova Receita
        </button>
        <button class="box btn btn-danger" onclick="window.location.pathname='me/edit'">
          Minha Conta
        </button>
        <% } %>
        <button class="box btn btn-danger" onclick="window.location.pathname='/recipes/search'">
          Buscar Receita
        </button>
      </section>
      <%-include("../components/recipes", {recipes: recipes}); %>
    </section>
  </body>
</html>
