<!doctype html>
<html>

<head>
  <title>MVC com Express</title>
</head>

<body>
  <nav>
    <h3>Cookmaster</h3>
    <h4><%= userName %></h4>
    <a href="/logout">Logout</a>
  </nav>
  <% if (message) { %>
  <p>
    <%= message %>
  </p>
  <% } %>
  <form action="/recipes/new" method="POST">
    <label for="recipe">Nome da Receita</label>
    <input id="recipe" name="recipe" type="text" />
    <div>
      <label for="ingredients">Ingredientes (separe os ingredientes por vírgula)</label>
      <textarea id="ingredients" name="ingredients" rows="4" cols="50">
        Digite aqui seus ingredientes separados por vírgula.
      </textarea>
    </div>
    <div>
      <label for="instructions">Modo de preparo</label>
      <textarea id="instructions" name="instructions" rows="10" cols="50">
        Digite o modo de preparo.
      </textarea>
    </div>
    <a href="/">Voltar</a>
    <button type="submit">Salvar Receita</button>
  </form>
</body>

</html>