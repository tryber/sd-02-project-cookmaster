<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cookmaster - Home</title>

  <style>
    .Home_header {
      background-color: grey;
      position: relative;
      padding: 1vh 2vw;
      margin: -10px;
      display: flex;
      justify-content: space-between;
    }

    .Home_header_tags {
      font-size: 2vh;
    }

    .Home_recipes {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 2vw 0 2vw;
    }

    .Recipes_div {
      display: flex;
      flex-flow: row wrap;
      padding: 2vh 2vw;
    }

    .Recipe_selection {
      margin: 1vh 1vw;
      padding: 1vh 1vw;
      background-color: grey;
    }
  </style>

</head>

<body>
  <div class="Home_header">
    <p class="Home_header_tags">Cookmaster</p>
    <button
      class=" Home_header_tags"
      type="button"
      onclick="window.location.pathname='/login'"
    >
      Login
    </button>
  </div>
  <div class="Home_recipes">
    <h1>Receitas</h1>
    <div>
      <% if(user) { %>
      <button type="button" class="my_recipes">Minhas Receitas</button>
      <button type="button" class="new_recipe">Nova Receita</button>
      <% } %>
      <button type="button" class="search_recipes">Buscar Receita</button>
    </div>
  </div>

  <div class="Recipes_div">
    <% allRecipes.forEach((recipe) => {%>
    <div class="Recipe_selection">
      <p><%=`${recipe.recipe}`%></p>
      <p><%=`${recipe.userName}`%></p>
      <a href="<%=`/recipes/${recipe.id}`%>">Ver mais</a>
    </div>
    <% }) %>
  </div>
</body>

</html>
