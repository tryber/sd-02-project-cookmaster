<!doctype html>
<html>

<head>
  <title>MVC com Express</title>
</head>

<body>
  <%- include('navbar/usernavbar', { userName }) %>
  <% if (message) { %>
  <p>
    <%= message %>
  </p>
  <% } %>
  <form action=<%= `/recipes/${recipe.recipeId}/edit` %> method="POST">
    <label for="recipe">Nome da Receita</label>
    <input id="recipe" name="recipe" type="text" value="<%= recipe.recipeName %>" />
    <div>
      <label for="ingredients">Ingredientes (separe os ingredientes por v√≠rgula)</label>
      <textarea id="ingredients" name="ingredients" rows="4" cols="50"><%= recipe.ingredients %></textarea>
    </div>
    <div>
      <label for="instructions">Modo de preparo</label>
      <textarea id="instructions" name="instructions" rows="10" cols="50"><%= recipe.instructions %></textarea>
    </div>
    <a href="/">Voltar</a>
    <button type="submit">Salvar Receita</button>
  </form>
</body>

</html>
